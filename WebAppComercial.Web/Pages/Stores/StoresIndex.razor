@page "/stores"

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService

<h3>Almacenes</h3>

<a class="btn btn-primary mb-3" href="/stores/create">Nuevo Almacén</a>

<GenericList MyList="Stores">
    <Body>
        <table class="table table-sm table-info table-striped">
            <thead>
                <tr>
                    <th>Almacén</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var store in Stores!)
                {
                    <tr>
                        <td>
                            @store.Name
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/stores/edit/@store.Id">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => DeleteAsync(store.Id))>Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>


@code {
    public List<Store>? Stores { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        var responseHttp = await repository.Get<List<Store>>("/api/stores");
        Stores = responseHttp.Response;
    }

    private async Task DeleteAsync(int id)
    {
        var result = await sweetAlertService.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Realmente deseas eliminar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true,
                CancelButtonText = "No",
                ConfirmButtonText = "Si"
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHttp = await repository.Delete($"/api/stores/{id}");

        if (responseHttp.Error)
        {
            if (responseHttp.HttpResponseMessage.StatusCode != HttpStatusCode.NotFound)
            {
                var message = await responseHttp.GetErrorMessage();
                await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
                return;
            }
        }
        await LoadAsync();
    }
}